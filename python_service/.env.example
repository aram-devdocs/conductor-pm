NOTION_TOKEN=your_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# AI Configuration
AI_PROVIDER=openai  # Options: openai, ollama, custom
AI_MODEL=           # Optional: Override default model for any provider
AI_API_BASE=        # Optional: Override default API base URL for any provider

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # Default model for OpenAI

# Ollama Configuration
OLLAMA_MODEL=llama3.2  # Default model for Ollama
OLLAMA_API_BASE=http://localhost:11434  # Default Ollama API endpoint

# Custom Provider Configuration
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_MODEL=your_custom_model
CUSTOM_API_BASE=your_custom_api_base_url

# Cache Configuration
USE_REDIS=false  # Set to true to use Redis, false for local file-based cache
REDIS_HOST=localhost  # Redis host (use 'redis' for Docker)
REDIS_PORT=6379  # Redis port
REDIS_DB=0  # Redis database number 