# Notion Configuration
NOTION_TOKEN=your_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# AI Configuration
AI_PROVIDER=openai  # Options: openai, ollama, custom, bedrock
AI_MODEL=           # Model identifier for any provider

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1  # Optional: Override OpenAI API base URL

# Ollama Configuration
OLLAMA_API_BASE=http://localhost:11434  # Default Ollama API endpoint

# Custom Provider Configuration
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_API_BASE=your_custom_api_base_url

# AWS Bedrock Configuration
AWS_REGION=us-east-1  # AWS region where Bedrock is available
AWS_ACCESS_KEY_ID=your_aws_access_key  # AWS access key ID
AWS_SECRET_ACCESS_KEY=your_aws_secret_key  # AWS secret access key

# Cache Configuration
USE_REDIS=false  # Set to true to use Redis, false for local file-based cache
REDIS_HOST=localhost  # Redis host (use 'redis' for Docker)
REDIS_PORT=6379  # Redis port
REDIS_DB=0  # Redis database number 